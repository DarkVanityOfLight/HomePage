smokeyBlack = rgba(12, 15, 10, 1)
white = rgba(239, 249, 240, 1)
skyBlue = rgba(146, 220, 229, 1)
marineBlue = rgba(21, 50, 67, 1)
grey = rgba(49, 62, 80, 1)
@import url('https://fonts.googleapis.com/css?family=Exo+2&display=swap')

.quote-container
    width: calc(100% - 3px);
    background-size: cover;
    background-position: center top;
    border-style: solid 
    border-color: grey
    border-width: 3px

.incer
    width: 100%
    height: 100%
    background-color: rgba(12, 15, 10, 0.7)
    display: flex
    justify-content: center
    align-items: center
    font-size: 5vw

.quote-text-container
    height: fit-content
    width: fit-content

.quote-text-container p
    color: mix( white, skyBlue)
    font-family: 'Exo 2'